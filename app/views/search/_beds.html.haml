- room.bookings.each do |book|
  - # Check if a given interval overlaps this interval
  - if (book.start_date  - params[:booking][:end_date].to_date) * (params[:booking][:start_date].to_date  - book.start_date) >= 0
    - book.number_of_guests.times do
      %i.fa.fa-bed{style:"color:red;"}
    - (room.capacity - book.number_of_guests).times do
      %i.fa.fa-bed
  - else
    - room.capacity.times do
      %i.fa.fa-bed

- if room.bookings.empty?
  - room.capacity.times do
    %i.fa.fa-bed